  "testCases": [
    {
      "id": "extract-001",
      "transcript": "User: I'm a PM at Stripe working on payments\nAssistant: Nice to meet you!",
      "mockResponse": "{\"facts\":[{\"category\":\"core\",\"content\":\"Product Manager at Stripe\"}]}",
      "expectedFacts": [
        { "category": "core", "content": "Product Manager at Stripe" }
      ],
      "tags": ["core"],
      "notes": "Skip 'working on payments' - ephemeral project, not durable identity"
    },
    {
      "id": "extract-002",
      "transcript": "User: I prefer concise answers with code examples\nAssistant: Got it!",
      "mockResponse": "{\"facts\":[{\"category\":\"preference\",\"content\":\"Prefers concise responses\"},{\"category\":\"preference\",\"content\":\"Wants code examples\"}]}",
      "expectedFacts": [
        { "category": "preference", "content": "Prefers concise responses" },
        { "category": "preference", "content": "Wants code examples" }
      ],
      "tags": ["preference", "split"],
      "notes": "Split: preferences change independently"
    },
